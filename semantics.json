      {
        "label": "Require all fields to be answered before the solution can be viewed",
        "name": "showSolutionsRequiresInput",
        "type": "boolean",
        "default": true,
        "optional": true
      },
      {
        "label": "Put input fields on separate lines",
        "name": "separateLines",
        "type": "boolean",
        "default": false,
        "optional": true
      }
    ]
  },
